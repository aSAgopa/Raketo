@using Raketo.ViewModel;
@model IEnumerable<OrderViewModel>;
@{
    var userId = ViewBag.UserId;
    var totalPrice = ViewBag.TotalPrice;
    
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Payment Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card p-4 shadow" style="width: 350px;">
            <h3 class="text-center mb-3">Payment Form</h3>
            <form asp-controller="order" asp-action="ProcessPayment" asp-route-userId="@userId" asp-route-totalPrice="@totalPrice" method="post" >
                <div class="mb-3">
                    <input type="text" class="form-control" name="name" placeholder="Insert your Name" required>
                </div>
                <div class="mb-3">
                    <input type="text" class="form-control" name="surname" placeholder="Insert your Surname" required>
                </div>
                <div class="mb-3">
                    <input type="text" class="form-control" name="numberCard" maxlength="16" minlength="16"placeholder="Insert number of credit" required>
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <input type="text" class="form-control me-2" name="cvv" maxlength="3" minlength="3" placeholder="CVV" required style="width: 45%;">
                    <input type="text" class="form-control" placeholder="Total: @totalPrice EU" readonly style="width: 50%;">
                </div>
                <button type="submit" class="btn btn-success w-100">PAY</button>
                            
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

