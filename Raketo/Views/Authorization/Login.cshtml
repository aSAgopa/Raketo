@{
    ViewBag.Title = "Login";
}


<!DOCTYPE html>
    <html>
    <head>
        <meta charset='utf-8' />
        <title>Authorization</title>
    </head>
<body>
    </br></br></br>
    <h2 style="text-align: center; color: blue; ">Authorization Form</h2>
    <div style=" display: flex;
            align-items: center; justify-content: center;">
        <form method='post'>
            <p>
                <label>Email</label><br />
                <input name='login' />
            </p>
            <p>
                <label>Password</label><br />
                <input type='password' name='password' />
            </p>
            <input type='submit' value='Login' />
            @if (ViewBag.Error != null)
            {
                <p style="color: black;">@ViewBag.Error</p>
            }
        </form>
    </div>
    </body>

    </html>
    
