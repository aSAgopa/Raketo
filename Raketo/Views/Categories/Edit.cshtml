@using Raketo.Models;
@using Raketo.ViewModel;
@model ProductViewModel

<html lang="en">
<head>
    <link rel="stylesheet" href="/Lib/css/style.css" />
</head>
<body>
    <div style="text-align: center; border: 2px solid black; border-radius: 20px; background-image: url(/images/beverages.jpg)">
        <h1 style="color: blue">@Model.Category</h1>
    </div>

    <form action="/categories/edit" method="post">
        <input type="hidden" name="Category" value="@Model.Category" />
        <input type="hidden" name="Id" value="@Model.Id" />

        <div>
            <label><h3>Name</h3></label>
            <input type="text" asp-for="Name" placeholder="Add new description" />
        </div>
        <div>
            <label><h3>Quantity</h3></label>
            <input type="number" asp-for="Quantity" placeholder="Change quantity" />
        </div>
        <div>
            <label><h3>Price</h3></label>
            <input required asp-for="Price" type="number" step="0.01" size="25" placeholder="Input the price" />
        </div>

        <input id="borderRed" style="color:green" type="submit" value="Edit" />
    </form>

    <br />
    <a href="/admin/adminindex" style="border-radius: 7px;">
        <button>Back</button>
    </a>
</body>
</html>
