@using Raketo.ViewModel
@model ProductViewModel



    <div style="text-align: center ; border: 2px solid black;
      border-radius: 20px; background-image:url(/images/beverages.jpg)">
    </div>
   
    <form method="post" asp-controller="categories" asp-action="add">
        <p>
        <div>
            <label> <h3>Category</h3></label>
            <input required type="text" name="Category" placeholder="Input name of the category" />
        </div>
        <div>
        <label> <h3>Name</h3></label> 
            <input required type="text" name="Name" placeholder="Input name of the product" maxlength="20" />
        </div>
         <div>
        <label> <h3>Quantity</h3></label>
            <input required type="number" name="Quantity" size="25" placeholder="Input the quantity" />
        </div>   
        <div>
        <label> <h3>Price</h3></label>
            <input required asp-for="Price" type="number" step="0.01" size="25" placeholder="Input the price" />
        </div>
        </p>
        <button type="submit" style="color:red">Add product</button>
    </form>
    </br>
<a href="/user/admin" type="submit" border-radius:7px 25px; "><button>Back</button></a>

   



